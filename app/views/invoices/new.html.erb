<h1>Upload Invoice XML</h1>

<%= form_with(url: invoices_path, local: true, multipart: true) do |form| %>
  <div>
    <%= form.label :file, "Select XML file" %>
    <%= form.file_field :file %>
  </div>

  <div>
    <%= form.submit "Process Invoice" %>
  </div>
<% end %>

<%= link_to 'Back to Invoices', invoices_path %>
