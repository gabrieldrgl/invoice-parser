<h1>Invoice Details</h1>

<p><strong>Invoice Number:</strong> <%= @invoice.number %></p>
<p><strong>Issuer:</strong> <%= @invoice.issuer.name %> (<%= @invoice.issuer.cnpj %>)</p>
<p><strong>Recipient:</strong> <%= @invoice.recipient.name %> (<%= @invoice.recipient.cnpj %>)</p>
<p><strong>Date of Issue:</strong> <%= @invoice.emission_date %></p>

<h2>Products</h2>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>NCM</th>
      <th>CFOP</th>
      <th>Unit</th>
      <th>Quantity</th>
      <th>Unit Price</th>
      <th>ICMS</th>
      <th>IPI</th>
      <th>PIS</th>
      <th>COFINS</th>
    </tr>
  </thead>
  <tbody>
    <% @invoice.products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.ncm %></td>
        <td><%= product.cfop %></td>
        <td><%= product.unit %></td>
        <td><%= product.quantity %></td>
        <td><%= product.unit_price %></td>
        <% product.taxes.each do |tax| %>
          <td><%= tax.icms_value %></td>
          <td><%= tax.ipi_value %></td>
          <td><%= tax.pis_value %></td>
          <td><%= tax.cofins_value %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back to Invoices', invoices_path %>
